<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/card_back_btn">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/category_item"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/pizza_sample" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/categorytitle"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="-20dp"
        android:fontFamily="@font/poppinslight"
        android:maxLength="40"
        android:maxLines="2"
        android:text="sample text is here ðŸ˜† "
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/category_item"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/clock_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="-24dp"
        app:layout_constraintStart_toEndOf="@id/category_item"
        app:layout_constraintTop_toBottomOf="@id/category_item"
        app:srcCompat="@drawable/baseline_access_time_24" />

    <TextView
        android:id="@+id/clock_time"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
   android:layout_marginEnd="10dp"
        android:layout_marginBottom="31dp"
        android:fontFamily="@font/poppinslight"
        android:gravity="center"
        android:text="@string/_3_mins"
        android:textColor="@color/black"
       app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/move_Icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="5dp"
        android:padding="5dp"
        android:src="@drawable/card_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#019267" />

</androidx.constraintlayout.widget.ConstraintLayout>